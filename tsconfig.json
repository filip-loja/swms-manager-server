{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": false,
    "allowJs": true,
    "noImplicitAny": false,
  },
  "baseUrl": ".",
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "lib": [
    "esnext"
  ],
  "exclude": [
    "node_modules"
  ]
}
